<div class="tab-content">
  <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
    <form class="signup-form">
      <div class="text-center mb-3">
        <p>Create A New Account</p>
      </div>
      <div data-mdb-input-init class="form-outline mb-4">
        <input type="input" id="signUpUserName" class="form-control" />
        <label class="form-label">Username</label>
      </div>
      <div data-mdb-input-init class="form-outline mb-4">
        <input type="email" id="signUpName" class="form-control" />
        <label class="form-label">Email</label>
      </div>
      <div data-mdb-input-init class="form-outline mb-4">
        <input type="password" id="signUpPassword" class="form-control" />
        <label class="form-label">Password</label>
      </div>

      <button type="submit" data-mdb-button-init data-mdb-ripple-init
        class="btn btn-primary btn-block mb-4">Submit</button>
    </form>
  </div>
</div>

<script src="./js/signUp.js"></script>